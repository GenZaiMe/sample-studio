---
/**
 * ファイル: /src/components/ui/NavMobile.astro
 * 役割: モバイル下部固定ナビ
 *
 * NOTE:
 * - thema=xx の場合は BaseLayout のスクリプトがリンクに付与するため、ここは通常hrefでOK
 */
import { MOBILE_MENU } from "../../consts/navigation";
---

<nav class="border-t border-neutral-800 bg-neutral-950/90 backdrop-blur">
  <div class="mx-auto max-w-6xl px-3">
    <div class="grid grid-cols-4 py-2">
      {MOBILE_MENU.map((x) => (
        <a href={x.href} class="text-center text-xs pz-link" style="text-decoration:none;">
          <div class="text-[10px] uppercase tracking-wide">{x.label}</div>
        </a>
      ))}
    </div>
  </div>
</nav>
