---
/**
 * ファイル: /src/components/ui/NavDesktop.astro
 * 役割: 左カラムのメニュー
 */
import { DISPLAY_MENU } from "../../consts/navigation";
import ThemeToggle from "./ThemeToggle.astro";
import ZoomSlider from "./ZoomSlider.astro";
---

<div class="pz-block">
  <div class="pz-title pz-title-accent">
  <div class="flex items-center gap-2">
    <!-- favicon が存在すれば表示（存在しない場合は onerror で非表示） -->
    <img src="/favicon.svg" alt="" width="14" height="14"
         style="display:block"
         onerror="this.style.display='none'"/>
    <span>Menu</span>
  </div>
</div>

  <div class="mt-3 space-y-2">
    {DISPLAY_MENU.map((x) => (
      <a href={x.href} class="block pz-link" style="text-decoration:none;">{x.label}</a>
    ))}
  </div>

  <div class="mt-4 pt-4 border-t border-neutral-800">
    <ThemeToggle />
    <div class="mt-4 pt-4 border-t border-neutral-800">
      <ZoomSlider />
    </div>
  </div>
</div>
